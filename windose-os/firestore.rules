rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isJoserModerator() {
      return isSignedIn() && request.auth.token.email == 'joser@windose.local';
    }

    match /profiles/{uid} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn() && request.auth.uid == uid;
      allow delete: if false;
    }

    match /jine_messages/{messageId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if isJoserModerator() || (isSignedIn() && resource.data.authorUid == request.auth.uid);
    }

    match /jine_events/{eventId} {
      allow read: if true;
      allow create: if isJoserModerator();
      allow update, delete: if false;
    }
  }
}
